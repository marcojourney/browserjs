{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "src/*.test.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src",
    "src/index.ts",
    "src/**/*.d.ts",
    "node_modules",
    "@types"
  ]
}
